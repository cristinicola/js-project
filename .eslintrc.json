{
    "env": {
        "es6": true,
        "browser": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "script"
    },
    "extends": "eslint:recommended",
    "rules": {
        "no-unused-vars": [2, { "vars": "all", "args": "none" }],
        "no-undef": 2,
        "eqeqeq": 2,
        "guard-for-in": 2,
        "no-extend-native": 2,
        "wrap-iife": 2,
        "new-cap": 2,
        "no-caller": 2,
        "no-multi-str": 0,
        "dot-notation": 0,
        "semi": [2, "always"],
        "valid-jsdoc": 1,
        "no-irregular-whitespace": 1,
        "no-multi-spaces": 2,
        "one-var": [2, "never"],
        "constructor-super": 2,
        "no-this-before-super": 2,
        "no-var": 2,
        "prefer-const": 2,
        "no-const-assign": 2,
        "space-before-blocks": 2,
        "space-before-function-paren": 2
    },
    "globals": {
        "require": false,
        "module": false,
        "exports": false,
        "requireText": false,
        "__dirname": false,
        "__filename": false,
        "global": false,
        "process": false
    }
}